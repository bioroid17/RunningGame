<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Choice" >

    <TextView
        android:id="@+id/score_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@android:color/transparent"
        android:text="Score: 0"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/pause_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="639dp"
        android:layout_marginTop="325dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="35dp"
        android:contentDescription="score_description"
        android:onClick="onPauseButtonClick"
        app:srcCompat="@android:drawable/ic_media_pause" />

    <ImageView
        android:id="@+id/player"
        android:layout_width="61dp"
        android:layout_height="69dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="633dp"
        android:layout_marginBottom="221dp"
        app:srcCompat="@drawable/character" />

    <ImageView
        android:id="@+id/ground"
        android:layout_width="789dp"
        android:layout_height="29dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-58dp"
        android:layout_marginBottom="178dp"
        app:srcCompat="@android:drawable/bottom_bar" />

</RelativeLayout>